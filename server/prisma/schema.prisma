// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid()) // id is the primary key, and default generates a unique id
  title      String
  created_at DateTime

  @@map("habits") // map the model to the habits table
}
